{
  "name": "npm-scripts-template",
  "description": "The template project with npm scripts for building frontend assets: CSS, JS, images, SVG icons.",
  "version": "0.0.1",
  "author": "Anton Ustinoff <a.a.ustinoff@gmail.com>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/ziqq/npm-scripts-template"
  },
  "exports": "./src/js/app.js",
  "files": [
    "src",
    "*.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "imports": {
    "#root/*.js": "./*.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "sass --style=compressed --no-source-map src/scss:dist/css",
    "lint-scss": "stylelint src/scss/*.scss --config ./stylelint.config.js || true",
    "lint": "eslint src/js || true",
    "babel": "mkdirp dist/js -p && babel --presets @babel/preset-env src/js/app.js -o dist/js/app.js",
    "uglify": "uglifyjs dist/js/app.js -m -c -o dist/js/app.min.js",
    "imagemin": "imagemin src/assets/images/* -o dist/assets/images",
    "icons": "svgo -f src/assets/icons -o dist/assets/icons && svg-sprite-generate -d dist/assets/icons -o dist/assets/sprite.svg",
    "fonts": "mkdirp dist/assets/fonts && cp -r src/assets/fonts/* dist/assets/fonts",
    "serve": "browser-sync start --server --files \"dist/assets/**/* dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:js": "run-s lint babel uglify",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:images": "run-s imagemin icons",
    "build": "run-s fonts build:*",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:fonts": "onchange \"src/assets/fonts/**/*\" -- run-s fonts",
    "watch:icons": "onchange \"src/assets/icons/**/*\" -- run-s icons",
    "watch:images": "onchange \"src/assets/images/**/*\" -- run-s imagemin",
    "watch": "run-p serve watch:*",
    "start": "run-s clean build watch",
    "postinstall": "run-s build watch",
    "firebase:init": "firebase init",
    "firebase:login": "firebase login",
    "firebase:serve": "npm run build:firebase && firebase serve"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "autoprefixer": "^10.4.23",
    "browser-sync": "^3.0.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-standard-recommended": "^2.1.1",
    "eslint-plugin-unicorn": "62.0.0",
    "globals": "^17.0.0",
    "imagemin-cli": "^8.0.0",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "sass": "^1.97.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "svg-sprite-generator": "^0.0.7",
    "svgo": "^4.0.0",
    "uglify-js": "^3.19.3"
  },
  "dependencies": {
    "@mui/icons-material": "^7.3.7",
    "firebase": "^12.7.0",
    "typesafe-i18n": "^5.26.2"
  }
}